    "imagekit": {
      "enabled": false,
      "urlEndpoint": "",
      "publicKey": "",
      "privateKey": ""
    }
  },
  "monitoring": {
    "enabled": true,
    "trackLoadTimes": true,
    "trackErrors": true,
    "trackCacheHits": true,
    "reportInterval": 30000
  }
