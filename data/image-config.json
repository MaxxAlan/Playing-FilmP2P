{
  "imageConfig": {
    "sizes": {
      "poster": {
        "small": { "width": 150, "height": 225 },
        "medium": { "width": 200, "height": 300 },
        "large": { "width": 300, "height": 450 },
        "original": { "width": 600, "height": 900 }
      },
      "thumbnail": {
        "small": { "width": 150, "height": 100 },
        "medium": { "width": 200, "height": 133 },
        "large": { "width": 300, "height": 200 },
        "original": { "width": 600, "height": 400 }
      },
      "backdrop": {
        "small": { "width": 640, "height": 360 },
